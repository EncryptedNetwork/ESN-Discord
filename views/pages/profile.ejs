<!DOCTYPE html>
<html lang="en">
	<head>

		<% include ../partials/header.ejs %>
		<title>Native Gaming - <%= target.username %></title>

	</head>

	<body>
		
		<div id="site-content">
			<header class="site-header">
				<div class="container">
					<% include ../partials/logo.ejs %>
					
					<nav class="main-navigation">
						<button type="button" class="toggle-menu"><i class="fa fa-bars"></i></button>
						<ul class="menu">
							<li class="menu-item"><a href="/">Home</a></li>
							<li class="menu-item"><a href="/about">About</a></li>
							<li class="menu-item"><a href="/media">Media</a></li>
							<li class="menu-item"><a href="/shop">Shop</a></li>
							<li class="menu-item"><a href="/news">News</a></li>
							<li class="menu-item"><a href="/apply">Application</a></li>
							<li class="menu-item"><a href="/support">Support</a></li>
							<% if(user.ngid) { %><li class="menu-item"><a href="<%= user.profile %>" >Profile</a></li><% } else { %><li class="menu-item"><a href="/login" >Login/Signup</a></li><% } %>
						</ul> <!-- .menu -->
					</nav> <!-- .main-navigation -->
					<div class="mobile-menu"></div>
				</div>
			</header> <!-- .site-header -->
			
			<main class="main-content">
				<div class="fullwidth-block inner-content">
					<div class="container">
						<h2 class="page-title"><%= target.username %></h2>
						<div class="row">
							<div class="col-md-6">
								<div class="map-wrapper">
									<figure class="cover"><img src="/images/thumbnail-2.png" alt="thumbnail 2"></figure>
									<address>
										<div class="row">
											<div class="col-sm-6">
												<strong><%= target.username %> </strong><br>
												<%= target.rank %>
                                                
											</div>
											<div class="col-sm-6">
												<a><%= target.ngid %></a> <br>
												<a href="#">Send Message</a>
											</div>
										</div>
									</address>
									<% if(user.own) { %><% if(!target.discordid) { %><span><a class="themecolor" style="cursor: pointer;" id="c-discord" href="/api/v1/auth/discord">Connect Discord |</a></span><% } %> <% if(!target.steamid) { %><span><a class="themecolor" style="cursor: pointer;" href="">Connect Steam</a></span><% } %><% } %>
								</div>
							</div>
						</div>
					</div>
				</div> <!-- .testimonial-section -->

				
			</main> <!-- .main-content -->

			<% if(!user.ngid) { %>
				<% include ../partials/footer.ejs %>
			<% } else { %>
				<% include ../partials/lfooter.ejs %>
			<% } %>

		</div> <!-- #site-content -->

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>		
		<% if(user.own) { %><script src="/js/pages/profile.js"></script><% } %>
		<!-- <script src="/js/pages/hoverprofile.js"></script> -->
		
	</body>

</html>